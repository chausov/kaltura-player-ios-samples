# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'OVPSample' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!


  #pod 'KalturaPlayer/OVP'
  pod 'KalturaPlayer/OVP', :git => 'https://github.com/kaltura/kaltura-player-ios.git', :branch => 'develop'


  ## In case we want to add IMA (Interactive Media Ads)
  pod 'PlayKit_IMA'
#  pod 'PlayKit_IMA', :git => 'https://github.com/kaltura/playkit-ios-ima.git', :branch => 'develop'


  ## In case we want to add Youbora
  pod 'PlayKitYoubora'
#  pod 'PlayKitYoubora', :git => 'https://github.com/kaltura/playkit-ios-youbora.git', :branch => 'develop'


  ## In case we want Offline content (can replace: pod 'KalturaPlayer/OVP')
  #pod 'KalturaPlayer/Offline_OVP'
  pod 'KalturaPlayer/Offline_OVP', :git => 'https://github.com/kaltura/kaltura-player-ios.git', :branch => 'develop'


  #--- In order to work with the unreleased versions --- Will be removed once released ---
  
  pod 'DownloadToGo', :git => 'https://github.com/kaltura/playkit-ios-dtg.git', :branch => 'FEC-10431'
  
end
